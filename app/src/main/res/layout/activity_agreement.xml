<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".agreement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="Instructions and Disclaimer"
            android:textColor="#000000"
            android:textSize="20dp" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_agreement"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="agreement_lottie.json"
        app:lottie_repeatCount="-1"
        app:lottie_repeatMode="restart" />

    <LinearLayout
        android:id="@+id/mid_lin"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/head2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="22sp"
                    android:layout_marginBottom="15sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:text="An Experimental system “Computer Aided Diagnosis In Neurotology (CADINO)” and its clinical evaluation in terms of usefulness, functionality and effectiveness."
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22sp"
                    android:layout_marginRight="22sp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:text="CADINO is an experimental program for computer-assisted diagnosis in cases of dizziness. Given a patient’s findings, CADINO aids the clinicians make difficult diagnoses in cases of vertigo. Read the options carefully and select only one option that is best and main finding of the patient. The system presumes that patient is suffering from only one disease. If you strongly feel that more than one options apply to the patient than you will have to start the system again from the beginning or from that particular box. You must understand that the system cannot replace the experts such as ENT surgeons. Their opinions should be considered as final. The purpose of this study is to illustrate the strengths and weaknesses of CADINO and to provide a rough estimate of its clinical acumen. " />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btm_lin"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15sp"
        android:background="@drawable/agreement_box"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="I agree and would like \nto assist in the evaluation of &quot;Cadino&quot;"
            android:textColor="#ffffff"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>