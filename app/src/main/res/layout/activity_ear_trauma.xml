<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".earTrauma">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/con_top"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginRight="20sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/con_drawer"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/drawer_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/drawer"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/ic_round_arrow_back_24" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text="Ear Trauma / F.B."
                        android:textColor="#2B2B2B"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/con_feedback"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/drawer_bg"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/feedback_pic"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_weight="0"
                            app:srcCompat="@drawable/ic_baseline_question_mark_24" />
                    </LinearLayout>
                </LinearLayout>

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="size_list.json"
                    app:lottie_repeatCount="500"
                    app:lottie_repeatMode="restart" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="20sp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:text="Do you have any \nof the following associated symptoms? " />

                <LinearLayout
                    android:id="@+id/bottom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/btm_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/con_Slap_ear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/ripple_list"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:outlineSpotShadowColor="#B4CEE6">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15sp"
                                android:layout_marginBottom="15sp"
                                android:fontFamily="@font/medium"
                                android:gravity="center"
                                android:text="A Slap to Ear or Explosion "
                                android:textColor="#2B2B2B"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/con_foreign_bodies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20sp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/ripple_list"
                            android:elevation="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:outlineSpotShadowColor="#B4CEE6">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30sp"
                                android:layout_marginTop="15sp"
                                android:layout_marginRight="30dp"
                                android:layout_marginBottom="15sp"
                                android:fontFamily="@font/medium"
                                android:gravity="center"
                                android:text="Foreign Bodies like Hairpin or Bullet"
                                android:textColor="#2B2B2B"
                                android:textSize="15sp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>